<Window x:Class="WpfStdOut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfStdOut"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel LastChildFill="True">
            <Label DockPanel.Dock="Top">Text to output:</Label>
            <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" 
                    Margin="5" MinWidth="100" Click="Button_Click">Go for it!</Button>
            <TextBox Name="OutputTextBox" AcceptsReturn="True"/>
        </DockPanel>
        
    </Grid>
</Window>
